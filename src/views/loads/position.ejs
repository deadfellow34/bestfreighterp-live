// Document Preview on Hover
let previewTooltip = null;
let hideTimeout = null;

function showDocPreview(event, element) {
  // Clear any pending hide timeout
  if (hideTimeout) {
    clearTimeout(hideTimeout);
    hideTimeout = null;
  }
  
  const filePath = element.dataset.filePath;
  const fileName = element.dataset.fileName;
  const isImage = element.dataset.isImage === 'true';
  const isPdf = element.dataset.isPdf === 'true';
  
  // Remove existing tooltip
  hideDocPreview(true);
  
  // Create tooltip
  previewTooltip = document.createElement('div');
  previewTooltip.className = 'doc-preview-tooltip';
  
  // Keep tooltip visible when mouse enters it
  previewTooltip.onmouseenter = function() {
    if (hideTimeout) {
      clearTimeout(hideTimeout);
      hideTimeout = null;
    }
  };
  previewTooltip.onmouseleave = function() {
    hideDocPreview();
  };
  
  if (isImage) {
    previewTooltip.innerHTML = '<div class="preview-loading">â³ YÃ¼kleniyor...</div>';
    document.body.appendChild(previewTooltip);
    positionTooltip(event);
    
    const img = new Image();
    img.onload = function() {
      if (previewTooltip) {
        previewTooltip.innerHTML = '';
        previewTooltip.appendChild(img);
      }
    };
    img.onerror = function() {
      if (previewTooltip) {
        previewTooltip.innerHTML = '<div class="preview-loading">âŒ Ã–nizleme yÃ¼klenemedi</div>';
      }
    };
    img.src = filePath;
  } else if (isPdf) {
    // PDF iÃ§in embed/iframe ile gerÃ§ek Ã¶nizleme
    previewTooltip.innerHTML = `
      <iframe src="${filePath}#toolbar=0&navpanes=0" 
              style="width: 700px; height: 600px; border: none; border-radius: 8px; background: white;">
      </iframe>
    `;
    document.body.appendChild(previewTooltip);
    positionTooltip(event);
  } else {
    // Other file types
    previewTooltip.innerHTML = `
      <div class="pdf-preview">
        <div class="pdf-icon">ðŸ“Ž</div>
        <div class="pdf-name">${fileName}</div>
      </div>
    `;
    document.body.appendChild(previewTooltip);
    positionTooltip(event);
  }
}

function positionTooltip(event) {
  if (!previewTooltip) return;
  
  const padding = 15;
  let x = event.clientX + padding;
  let y = event.clientY + padding;
  
  // Check right edge
  const tooltipRect = previewTooltip.getBoundingClientRect();
  if (x + tooltipRect.width > window.innerWidth) {
    x = event.clientX - tooltipRect.width - padding;
  }
  
  // Check bottom edge
  if (y + tooltipRect.height > window.innerHeight) {
    y = event.clientY - tooltipRect.height - padding;
  }
  
  previewTooltip.style.left = x + 'px';
  previewTooltip.style.top = y + 'px';
}

function hideDocPreview(immediate) {
  if (immediate) {
    if (hideTimeout) {
      clearTimeout(hideTimeout);
      hideTimeout = null;
    }
    if (previewTooltip) {
      previewTooltip.remove();
      previewTooltip = null;
    }
  } else {
    // Delay hiding to allow mouse to enter tooltip
    hideTimeout = setTimeout(() => {
      if (previewTooltip) {
        previewTooltip.remove();
        previewTooltip = null;
      }
    }, 150);
  }
}

