// Helper: Extract UK postcode from address string
function extractUKPostcode(text) {
  if (!text) return null;
  // UK postcode pattern: 1-2 letters, 1-2 digits, optional space, digit, 2 letters
  // Examples: HP7 9JQ, SW1A 1AA, M1 1AE, B33 8TH, CR2 6XH, DN55 1PT
  const pattern = /\b([A-Z]{1,2}\d{1,2}[A-Z]?\s*\d[A-Z]{2})\b/i;
  const match = text.match(pattern);
  return match ? match[1].toUpperCase().replace(/\s+/g, ' ').trim() : null;
}

// Helper: try postcodes.io (UK) first, then fallback to Nominatim (OpenStreetMap) for non-UK postal codes
async function geocodePostcode(postcode) {
  if (!postcode) return null;
  
  // Extract UK postcode from the input (in case full address is passed)
  const ukPostcode = extractUKPostcode(postcode);
  
  // Try postcodes.io (UK) if we found a UK postcode pattern
  if (ukPostcode) {
    try {
      const resp = await fetch(`https://api.postcodes.io/postcodes/${encodeURIComponent(ukPostcode)}`);
      const data = await resp.json();
      if (data && data.status === 200 && data.result) {
        return { lat: data.result.latitude, lon: data.result.longitude, source: 'postcodes.io' };
      }
    } catch (e) {
      // ignore and fallback
    }
  }

  // Fallback: Nominatim (OpenStreetMap) - returns first matching result
