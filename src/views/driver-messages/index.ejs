  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const currentUser = '<%= currentUser?.username || "operator" %>';
    let currentFilter = 'all';
    
    socket.emit('joinDriverMessagesPanel', { username: currentUser });
    
    socket.on('driver_new_message', (data) => {
      console.log('[Socket] New message:', data);
      showNotification(data.driverName, data.message);
      updateConversationCard(data.driverId, data.driverName, data.message);
    });
    
    function setFilter(filter) {
      currentFilter = filter;
      document.querySelectorAll('.filter-tab').forEach(tab => {
        tab.classList.toggle('active', tab.dataset.filter === filter);
      });
      filterConversations();
    }
    
    function filterConversations() {
      const term = document.getElementById('searchDriver').value.toLowerCase().trim();
      const cards = document.querySelectorAll('.conversation-card');
      
      cards.forEach(card => {
        const name = card.getAttribute('data-name');
        const hasUnread = card.getAttribute('data-unread') === 'true';
        const isOnline = card.getAttribute('data-online') === 'true';
        
        let matchesFilter = true;
        if (currentFilter === 'unread') matchesFilter = hasUnread;
        if (currentFilter === 'online') matchesFilter = isOnline;
        
        const matchesSearch = term === '' || name.includes(term);
        
        card.style.display = (matchesFilter && matchesSearch) ? 'flex' : 'none';
      });
    }
    
    function showNotification(driverName, message) {
      updateStats();
      
      if (Notification.permission === 'granted') {
        new Notification('Yeni Mesaj - ' + driverName, {
          body: message.message || 'üì∑ G√∂rsel',
          icon: '/images/logo.png'
        });
      }
      
      playSound();
    }
    
    function playSound() {
      try {
        const ctx = new (window.AudioContext || window.webkitAudioContext)();
        const osc = ctx.createOscillator();
        const gain = ctx.createGain();
        osc.connect(gain);
        gain.connect(ctx.destination);
        osc.frequency.value = 800;
        osc.type = 'sine';
        gain.gain.value = 0.3;
        osc.start();
        gain.gain.exponentialRampToValueAtTime(0.01, ctx.currentTime + 0.3);
        osc.stop(ctx.currentTime + 0.3);
      } catch(e) {}
    }
    
    function updateConversationCard(driverId, driverName, message) {
      const card = document.querySelector(`a[href="/driver-messages/${driverId}"]`);
      
      if (card) {
        const lastMsgEl = card.querySelector('.last-message');
        if (lastMsgEl) {
          const text = message.message 
            ? (message.message.length > 55 ? message.message.substring(0, 55) + '...' : message.message)
            : '<i class="fas fa-image" style="color:#a5b4fc;"></i> G√∂rsel';
          lastMsgEl.innerHTML = text;
        }
        
        card.classList.add('has-unread');
        card.setAttribute('data-unread', 'true');
        
        let badge = card.querySelector('.unread-badge');
        const meta = card.querySelector('.conversation-meta');
        
        if (badge) {
          badge.textContent = parseInt(badge.textContent) + 1;
        } else if (meta) {
          badge = document.createElement('span');
          badge.className = 'unread-badge';
          badge.textContent = '1';
          meta.insertBefore(badge, meta.firstChild);
        }
        
        const timeEl = card.querySelector('.message-time');
        if (timeEl) timeEl.textContent = new Date().toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
        
        const list = document.getElementById('conversationsList');
        if (list) list.insertBefore(card, list.firstChild);
        
        card.classList.add('new-message-highlight');
        setTimeout(() => card.classList.remove('new-message-highlight'), 2000);
        
        filterConversations();
      } else {
        location.reload();
      }
    }
    
    function updateStats() {
      fetch('/driver-messages/api/conversations')
        .then(r => r.json())
        .then(data => {
          if (data.success && data.conversations) {
            let unread = 0;
            data.conversations.forEach(c => unread += c.unread_count || 0);
            
            const el = document.querySelector('.stat-value.red');
            if (el) el.textContent = unread;
            
            document.title = unread > 0 ? `(${unread}) ≈ûof√∂r Mesajlarƒ±` : '≈ûof√∂r Mesajlarƒ±';
          }
        })
        .catch(() => {});
    }
    
    if ('Notification' in window && Notification.permission === 'default') {
      Notification.requestPermission();
    }
    
    window.addEventListener('beforeunload', () => {
      socket.emit('leaveDriverMessagesPanel');
    });
  </script>

  <%
    function formatTime(dateStr) {
      if (!dateStr) return '';
      const date = new Date(dateStr);
      const now = new Date();
      
      if (date.toDateString() === now.toDateString()) {
        return date.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
      }
      
      const yesterday = new Date(now);
      yesterday.setDate(yesterday.getDate() - 1);
      if (date.toDateString() === yesterday.toDateString()) {
        return 'D√ºn';
      }
      
      return date.toLocaleDateString('tr-TR', { day: 'numeric', month: 'short' });
    }
