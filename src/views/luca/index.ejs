  <script>
    // State
    let isConnected = false;
    let activeCompanyId = null;

    // Init
    document.addEventListener('DOMContentLoaded', () => {
      initTabs();
      setDefaultDate();
      checkConnectionStatus();
    });

    // Tabs
    function initTabs() {
      document.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', () => {
          const tabId = tab.dataset.tab;
          
          // Update tab buttons
          document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
          tab.classList.add('active');
          
          // Update sections
          document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));
          document.getElementById(tabId + 'Section').classList.add('active');
        });
      });
    }

    // Set default date
    function setDefaultDate() {
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('invoiceDate').value = today;
    }

    // Check connection status
    async function checkConnectionStatus() {
      try {
        const res = await fetch('/api/luca/status');
        const data = await res.json();
        
        if (data.success && data.connected) {
          setConnected(true);
          refreshAllData();
        }
      } catch (e) {
        console.log('Not connected to Luca');
      }
    }

    // Connect to Luca
    async function connectToLuca() {
      showLoading();
      try {
        const identification = document.getElementById('settingsIdentification').value;
        const password = document.getElementById('settingsPassword').value;
        
        const res = await fetch('/api/luca/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ identificationNumber: identification, password })
        });
        
        const data = await res.json();
        
        if (data.success) {
          setConnected(true);
          activeCompanyId = data.companies?.[0]?.IdFirma;
          showToast('Luca\'ya ba≈üarƒ±yla baƒülanƒ±ldƒ±!', 'success');
          updateCompanyInfo(data);
          refreshAllData();
        } else {
          showToast(data.message || 'Baƒülantƒ± hatasƒ±', 'error');
        }
      } catch (e) {
        showToast('Baƒülantƒ± hatasƒ±: ' + e.message, 'error');
      }
      hideLoading();
    }

    // Set connected state
    function setConnected(connected) {
      isConnected = connected;
      const statusEl = document.getElementById('connectionStatus');
      const statusText = document.getElementById('statusText');
      const connectBtn = document.getElementById('connectBtn');
      
      if (connected) {
        statusEl.className = 'connection-status connected';
        statusText.textContent = 'Baƒülƒ±';
        connectBtn.style.display = 'none';
      } else {
        statusEl.className = 'connection-status disconnected';
        statusText.textContent = 'Baƒülƒ± Deƒüil';
        connectBtn.style.display = 'flex';
      }
    }

    // Update company info
    function updateCompanyInfo(data) {
      const companyInfo = document.getElementById('companyInfo');
      if (data.companies && data.companies.length > 0) {
        companyInfo.innerHTML = data.companies.map(c => `
          <div style="padding: 12px; background: var(--bg-surface); border-radius: 8px; margin-bottom: 8px;">
            <strong style="color: var(--text-primary);">${c.FirmaAdi}</strong>
            <br><span style="color: var(--text-muted); font-size: 12px;">ID: ${c.IdFirma}</span>
          </div>
        `).join('');
      }
    }

    // Refresh all data
    async function refreshAllData() {
      if (!isConnected) return;
      
      await Promise.all([
        refreshInvoices(),
        refreshRecipients(),
        refreshBalance()
      ]);
    }

    // Refresh invoices
    async function refreshInvoices() {
      if (!isConnected) return;
      
      try {
        const res = await fetch('/api/luca/invoices/staging');
        const data = await res.json();
        
        if (data.success && data.invoices) {
          renderInvoices(data.invoices);
          document.getElementById('invoicesCount').textContent = data.invoices.length;
          document.getElementById('statTotal').textContent = data.invoices.length;
        }
      } catch (e) {
        console.error('Invoice refresh error:', e);
      }
    }

    // Render invoices
    function renderInvoices(invoices) {
      const tbody = document.getElementById('invoicesTableBody');
      
      if (!invoices || invoices.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="7" class="empty-state">
              <i class="fas fa-file-invoice"></i>
              <h3>Hen√ºz fatura yok</h3>
            </td>
          </tr>
        `;
        return;
      }
      
      tbody.innerHTML = invoices.map(inv => `
        <tr>
          <td><strong>${inv.InvoiceNumber || '-'}</strong></td>
          <td><code style="font-size: 11px;">${(inv.Ettn || '').substring(0, 8)}...</code></td>
          <td>${inv.RecipientCompanyName || '-'}</td>
          <td>${inv.InvoiceDate || '-'}</td>
          <td><strong>${formatMoney(inv.InvoiceTotalLineAmount)} ${inv.CurrencyCode || 'TRY'}</strong></td>
          <td><span class="status-badge ${getStatusClass(inv.Status)}">${inv.Status || 'Taslak'}</span></td>
          <td>
            <button class="action-btn view" onclick="viewInvoice('${inv.InvoiceId}')">
              <i class="fas fa-eye"></i>
            </button>
            <button class="action-btn send" onclick="sendInvoice('${inv.InvoiceId}')">
              <i class="fas fa-paper-plane"></i>
            </button>
            <button class="action-btn pdf" onclick="downloadPdf('${inv.InvoiceId}', '${inv.Ettn}')">
              <i class="fas fa-file-pdf"></i>
            </button>
          </td>
        </tr>
      `).join('');
    }

    // Refresh recipients
    async function refreshRecipients() {
      if (!isConnected) return;
      
      try {
        const res = await fetch('/api/luca/recipients');
        const data = await res.json();
        
        if (data.success && data.recipients) {
          renderRecipients(data.recipients);
        }
      } catch (e) {
        console.error('Recipients refresh error:', e);
      }
    }

    // Render recipients
    function renderRecipients(recipients) {
      const tbody = document.getElementById('recipientsTableBody');
      
      if (!recipients || recipients.length === 0) {
        tbody.innerHTML = `
          <tr>
            <td colspan="5" class="empty-state">
              <i class="fas fa-users"></i>
              <h3>Hen√ºz alƒ±cƒ± yok</h3>
            </td>
          </tr>
        `;
        return;
      }
      
      tbody.innerHTML = recipients.map(r => `
        <tr>
          <td><strong>${r.ReceiverName || r.Title || '-'}</strong></td>
          <td><code>${r.VknTckn || r.ReceiverTaxCode || '-'}</code></td>
          <td>${r.CityName || '-'}</td>
          <td>${r.RecipientType || '-'}</td>
          <td>
            <button class="action-btn view" onclick="viewRecipient('${r.IdRecipient}')">
              <i class="fas fa-eye"></i>
            </button>
          </td>
        </tr>
      `).join('');
    }

    // Refresh balance
    async function refreshBalance() {
      if (!isConnected) return;
      
      try {
        const res = await fetch('/api/luca/balance');
        const data = await res.json();
        
        const balanceInfo = document.getElementById('balanceInfo');
        if (data.success) {
          balanceInfo.innerHTML = `
            <div style="font-size: 32px; font-weight: 700; color: var(--text-primary);">
              ${data.Balance || data.balance || 0} Kont√∂r
            </div>
          `;
        }
      } catch (e) {
        console.error('Balance refresh error:', e);
      }
    }

    // Create invoice
    async function createInvoice() {
      const form = document.getElementById('newInvoiceForm');
      
      const invoiceData = {
        CompanyId: activeCompanyId,
        InvoiceType: parseInt(document.getElementById('invoiceType').value),
        ScenarioType: parseInt(document.getElementById('scenarioType').value),
        InvoiceDate: document.getElementById('invoiceDate').value,
        CurrencyCode: document.getElementById('currencyCode').value,
        Receiver: {
          ReceiverName: document.getElementById('recipientName').value,
          ReceiverTaxCode: document.getElementById('recipientVkn').value,
          Address: {
            BoulevardAveneuStreetName: document.getElementById('recipientAddress').value
          }
        },
        Products: [{
          ProductName: document.getElementById('productName').value,
          Quantity: parseFloat(document.getElementById('quantity').value),
          UnitPrice: parseFloat(document.getElementById('unitPrice').value),
          VatRate: parseFloat(document.getElementById('vatRate').value),
          MeasureUnitId: 1,
          MeasureUnitDesc: 'Adet'
        }],
        Notes: document.getElementById('invoiceNotes').value ? [document.getElementById('invoiceNotes').value] : [],
        SendMailAutomatically: true
      };
      
      // Calculate amounts
      const qty = invoiceData.Products[0].Quantity;
      const price = invoiceData.Products[0].UnitPrice;
      const vatRate = invoiceData.Products[0].VatRate;
      const lineAmount = qty * price;
      const vatAmount = lineAmount * (vatRate / 100);
      
      invoiceData.Products[0].LineExtensionAmount = lineAmount;
      invoiceData.Products[0].VatAmount = vatAmount;
      invoiceData.TotalLineExtensionAmount = lineAmount;
      invoiceData.TotalVATAmount = vatAmount;
      invoiceData.TotalTaxInclusiveAmount = lineAmount + vatAmount;
      invoiceData.TotalPayableAmount = lineAmount + vatAmount;
      
      showLoading();
      try {
        const res = await fetch('/api/luca/invoices', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(invoiceData)
        });
        
        const data = await res.json();
        
        if (data.success) {
          showToast(`Fatura olu≈üturuldu: ${data.InvoiceNumber}`, 'success');
          closeModal('newInvoiceModal');
          refreshInvoices();
        } else {
          showToast(data.message || 'Fatura olu≈üturulamadƒ±', 'error');
        }
      } catch (e) {
        showToast('Hata: ' + e.message, 'error');
      }
      hideLoading();
    }

    // Send invoice
    async function sendInvoice(invoiceId) {
      if (!confirm('Faturayƒ± g√∂ndermek istediƒüinize emin misiniz?')) return;
      
      showLoading();
      try {
        const res = await fetch(`/api/luca/invoices/${invoiceId}/send`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        
        const data = await res.json();
        
        if (data.success) {
          showToast('Fatura g√∂nderildi!', 'success');
          refreshInvoices();
        } else {
          showToast(data.message || 'G√∂nderim hatasƒ±', 'error');
        }
      } catch (e) {
        showToast('Hata: ' + e.message, 'error');
      }
      hideLoading();
    }

    // Download PDF
    function downloadPdf(invoiceId, ettn) {
      window.open(`/api/luca/invoices/${invoiceId}/pdf?ettn=${ettn}`, '_blank');
    }

    // View invoice
    async function viewInvoice(invoiceId) {
      window.open(`/api/luca/invoices/${invoiceId}/html`, '_blank');
    }

    // View recipient
    async function viewRecipient(recipientId) {
      showToast('Alƒ±cƒ± detaylarƒ± yakƒ±nda...', 'warning');
    }

    // Modal functions
    function openNewInvoiceModal() {
      if (!isConnected) {
        showToast('√ñnce Luca\'ya baƒülanƒ±n', 'warning');
        return;
      }
      document.getElementById('newInvoiceModal').classList.add('active');
    }

    function closeModal(modalId) {
      document.getElementById(modalId).classList.remove('active');
    }

    // Helper functions
    function formatMoney(amount) {
      return new Intl.NumberFormat('tr-TR', { minimumFractionDigits: 2 }).format(amount || 0);
    }

    function getStatusClass(status) {
      const statusMap = {
        'Taslak': 'draft',
        'Draft': 'draft',
        'G√∂nderildi': 'sent',
        'Sent': 'sent',
        'Onaylandƒ±': 'approved',
        'Approved': 'approved',
        'ƒ∞ptal': 'cancelled',
        'Cancelled': 'cancelled'
      };
      return statusMap[status] || 'draft';
    }

    // Loading
    function showLoading() {
      document.getElementById('loadingOverlay').classList.add('active');
    }

    function hideLoading() {
      document.getElementById('loadingOverlay').classList.remove('active');
    }

    // Toast
    function showToast(message, type = 'success') {
      const container = document.getElementById('toastContainer');
      const toast = document.createElement('div');
      toast.className = `toast ${type}`;
      toast.innerHTML = `
        <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'times-circle' : 'exclamation-circle'}"></i>
        ${message}
      `;
      container.appendChild(toast);
      
      setTimeout(() => {
        toast.remove();
      }, 4000);
    }

    // Test connection
    async function testConnection() {
      showLoading();
      try {
        const res = await fetch('/api/luca/health');
        const data = await res.json();
        
        if (data.success && data.status === 'ok') {
          showToast('API baƒülantƒ±sƒ± ba≈üarƒ±lƒ±!', 'success');
        } else {
          showToast('API yanƒ±t vermiyor', 'error');
        }
      } catch (e) {
        showToast('Baƒülantƒ± hatasƒ±: ' + e.message, 'error');
      }
      hideLoading();
    }

    // Parameter loaders
    async function loadCurrencies() {
      showLoading();
      try {
        const res = await fetch('/api/luca/currencies');
        const data = await res.json();
        console.log('Currencies:', data.currencies);
        showToast(`${data.currencies?.length || 0} para birimi y√ºklendi`, 'success');
      } catch (e) {
