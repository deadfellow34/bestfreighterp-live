        const res = await fetch('/api/luca/tax-types');
        const data = await res.json();
        console.log('Tax Types:', data.taxTypes);
        showToast(`${data.taxTypes?.length || 0} vergi t√ºr√º y√ºklendi`, 'success');
      } catch (e) {
        showToast('Hata: ' + e.message, 'error');
      }
      hideLoading();
    }

    async function loadMeasureUnits() {
      showLoading();
      try {
        const res = await fetch('/api/luca/measure-units');
        const data = await res.json();
        console.log('Measure Units:', data.measureUnits);
        showToast(`${data.measureUnits?.length || 0} √∂l√ß√º birimi y√ºklendi`, 'success');
      } catch (e) {
        showToast('Hata: ' + e.message, 'error');
      }
      hideLoading();
    }

    // Incoming & Despatches
    async function refreshIncoming() {
      if (!isConnected) return;
      showToast('Gelen faturalar y√ºkleniyor...', 'warning');
      // Implementation for incoming invoices
    }

    async function refreshDespatches() {
      if (!isConnected) return;
      showToast('ƒ∞rsaliyeler y√ºkleniyor...', 'warning');
      // Implementation for despatches
    }

    function openNewDespatchModal() {
      showToast('ƒ∞rsaliye olu≈üturma yakƒ±nda...', 'warning');
    }

    function openNewRecipientModal() {
      showToast('Alƒ±cƒ± ekleme yakƒ±nda...', 'warning');
    }
  </script>
