<style>
  /* ========== DRIVER HISTORY PAGE STYLES ========== */
  .history-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 24px;
  }

  .page-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    flex-wrap: wrap;
    gap: 16px;
  }

  .page-header h1 {
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary, #e2e8f0);
    display: flex;
    align-items: center;
    gap: 12px;
    margin: 0;
  }

  .back-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: rgba(148, 163, 184, 0.2);
    color: var(--text-primary, #e2e8f0);
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s;
  }

  .back-btn:hover {
    background: rgba(148, 163, 184, 0.3);
  }

  .driver-info-card {
    background: var(--bg-card, rgba(30, 41, 59, 0.8));
    border: 1px solid var(--border-color, rgba(148, 163, 184, 0.1));
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .driver-avatar {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
  }

  .driver-details h2 {
    font-size: 20px;
    font-weight: 700;
    color: var(--text-primary, #e2e8f0);
    margin: 0 0 4px 0;
  }

  .driver-details p {
    font-size: 14px;
    color: var(--text-muted, #94a3b8);
    margin: 0;
  }

  .driver-stats {
    display: flex;
    gap: 24px;
    margin-left: auto;
  }

  .driver-stat {
    text-align: center;
  }

  .driver-stat .value {
    font-size: 24px;
    font-weight: 700;
    color: #3b82f6;
  }

  .driver-stat .label {
    font-size: 12px;
    color: var(--text-muted, #94a3b8);
  }

  /* Map Container */
  .map-container {
    background: var(--bg-card, rgba(30, 41, 59, 0.8));
    border: 1px solid var(--border-color, rgba(148, 163, 184, 0.1));
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 24px;
  }

  .map-container h3 {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary, #e2e8f0);
    margin: 0 0 16px 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  #history-map {
    width: 100%;
    height: 400px;
    border-radius: 8px;
  }

  /* History Table */
  .history-section {
    background: var(--bg-card, rgba(30, 41, 59, 0.8));
    border: 1px solid var(--border-color, rgba(148, 163, 184, 0.1));
    border-radius: 12px;
    padding: 24px;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
  }

  .section-header h3 {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary, #e2e8f0);
    margin: 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .table-container {
    overflow-x: auto;
    max-height: 500px;
    overflow-y: auto;
  }

  .history-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
  }

  .history-table th,
  .history-table td {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid var(--border-color, rgba(148, 163, 184, 0.1));
  }

  .history-table th {
    font-weight: 600;
    color: var(--text-muted, #94a3b8);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    background: rgba(0, 0, 0, 0.1);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .history-table tbody tr:hover {
    background: rgba(59, 130, 246, 0.05);
  }

  .coords {
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 12px;
    color: var(--text-muted, #94a3b8);
  }

  .speed-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
  }

  .speed-badge.moving {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
  }

  .speed-badge.stopped {
    background: rgba(148, 163, 184, 0.2);
    color: #94a3b8;
  }

  .timestamp {
    font-size: 13px;
    color: var(--text-primary, #e2e8f0);
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-muted, #94a3b8);
  }

  .empty-state .icon {
    font-size: 48px;
    margin-bottom: 16px;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .history-container {
      padding: 16px;
    }

    .driver-info-card {
      flex-direction: column;
      text-align: center;
    }

    .driver-stats {
      margin-left: 0;
    }

    .history-table {
      font-size: 12px;
    }

    .history-table th,
    .history-table td {
      padding: 8px 12px;
    }
  }
</style>

