<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
  // Global variables for playback
  let map = null;
  let routeData = [];
  let routePolyline = null;
  let animatedPolyline = null;
  let truckMarker = null;
  let playbackIndex = 0;
  let isPlaying = false;
  let playbackInterval = null;
  let playbackSpeed = 500;
  const driverId = <%= driver.id || 0 %>;

  document.addEventListener('DOMContentLoaded', function() {
    const mapContainer = document.getElementById('history-map');
    if (!mapContainer) return;
    
    // Initialize map
    map = L.map('history-map').setView([39.9334, 32.8597], 6); // Turkey center
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '¬© OpenStreetMap contributors'
    }).addTo(map);
    
    // Load initial route from table data
    const rows = document.querySelectorAll('.history-table tbody tr');
    const coordinates = [];
    
    rows.forEach(row => {
      const lat = parseFloat(row.dataset.lat);
      const lng = parseFloat(row.dataset.lng);
      if (!isNaN(lat) && !isNaN(lng)) {
        coordinates.push({ latitude: lat, longitude: lng });
      }
    });
    
    if (coordinates.length > 0) {
      displayRoute(coordinates);
    }
  });

  // Load route for selected date
  async function loadRoute() {
    const dateInput = document.getElementById('date-select');
    const date = dateInput.value;
    
    if (!date) {
      alert('L√ºtfen bir tarih se√ßin');
      return;
    }
    
    const btn = document.getElementById('load-route-btn');
    btn.textContent = 'Y√ºkleniyor...';
    btn.disabled = true;
    
    try {
      const response = await fetch(`/driver-locations/api/${driverId}/route?date=${date}`);
      const data = await response.json();
      
      if (data.success && data.route.length > 0) {
        routeData = data.route;
        displayRoute(routeData);
        
        // Update stats
        document.getElementById('stat-points').textContent = `üìç ${data.totalPoints} nokta`;
        document.getElementById('stat-distance').textContent = `üìè ${data.totalDistanceKm} km`;
        
        // Enable playback
        document.getElementById('play-btn').disabled = false;
        document.getElementById('progress-container').style.display = 'block';
        
        // Set time labels
        if (routeData.length > 0) {
          const startTime = new Date(routeData[0].recorded_at).toLocaleTimeString('tr-TR', {hour: '2-digit', minute: '2-digit'});
          const endTime = new Date(routeData[routeData.length-1].recorded_at).toLocaleTimeString('tr-TR', {hour: '2-digit', minute: '2-digit'});
          document.getElementById('time-start').textContent = startTime;
          document.getElementById('time-end').textContent = endTime;
        }
      } else {
        alert('Bu tarih i√ßin rota verisi bulunamadƒ±');
        routeData = [];
        document.getElementById('play-btn').disabled = true;
      }
    } catch (err) {
      console.error('Route load error:', err);
      alert('Rota y√ºklenirken hata olu≈ütu');
    } finally {
      btn.textContent = 'Y√ºkle';
      btn.disabled = false;
    }
  }

  // Display route on map
  function displayRoute(data) {
    // Clear previous layers
    if (routePolyline) map.removeLayer(routePolyline);
    if (animatedPolyline) map.removeLayer(animatedPolyline);
    if (truckMarker) map.removeLayer(truckMarker);
    
    if (data.length === 0) return;
    
    const coordinates = data.map(p => [p.latitude, p.longitude]);
    
    // Draw full route (faded)
    routePolyline = L.polyline(coordinates, {
      color: '#94a3b8',
      weight: 3,
      opacity: 0.4,
      dashArray: '5, 10'
    }).addTo(map);
    
    // Animated route (highlighted)
    animatedPolyline = L.polyline([], {
      color: '#3b82f6',
      weight: 4,
      opacity: 0.9
    }).addTo(map);
    
    // Truck marker
    const truckIcon = L.divIcon({
      className: 'truck-marker',
      html: '<div style="font-size: 28px; filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));">üöõ</div>',
      iconSize: [40, 40],
      iconAnchor: [20, 20]
    });
    
    truckMarker = L.marker(coordinates[0], { icon: truckIcon }).addTo(map);
    
    // Add start/end markers
    const startIcon = L.divIcon({
      className: 'custom-marker',
      html: '<div style="background:#10b981; color:white; padding:4px 8px; border-radius:12px; font-size:11px; font-weight:600; white-space:nowrap; box-shadow:0 2px 8px rgba(0,0,0,0.3);">üèÅ Ba≈ülangƒ±√ß</div>',
      iconSize: null,
      iconAnchor: [50, 25]
    });
    L.marker(coordinates[0], { icon: startIcon }).addTo(map);
    
    if (coordinates.length > 1) {
      const endIcon = L.divIcon({
        className: 'custom-marker',
        html: '<div style="background:#ef4444; color:white; padding:4px 8px; border-radius:12px; font-size:11px; font-weight:600; white-space:nowrap; box-shadow:0 2px 8px rgba(0,0,0,0.3);">üèÅ Biti≈ü</div>',
        iconSize: null,
        iconAnchor: [50, 25]
      });
      L.marker(coordinates[coordinates.length - 1], { icon: endIcon }).addTo(map);
    }
    
    // Fit map to route
    map.fitBounds(routePolyline.getBounds(), { padding: [50, 50] });
    
    // Reset playback
    playbackIndex = 0;
    updateProgress();
  }

  // Toggle playback
  function togglePlayback() {
    if (isPlaying) {
      pausePlayback();
    } else {
      startPlayback();
    }
  }

  // Start playback animation
  function startPlayback() {
    if (routeData.length === 0) return;
    
    isPlaying = true;
    document.getElementById('play-icon').textContent = '‚è∏Ô∏è';
    document.getElementById('play-text').textContent = 'Duraklat';
    
    playbackInterval = setInterval(() => {
      if (playbackIndex >= routeData.length - 1) {
        pausePlayback();
        return;
      }
      
      playbackIndex++;
      
      // Update animated polyline
      const animatedCoords = routeData.slice(0, playbackIndex + 1).map(p => [p.latitude, p.longitude]);
      animatedPolyline.setLatLngs(animatedCoords);
      
      // Move truck marker
      const currentPoint = routeData[playbackIndex];
      truckMarker.setLatLng([currentPoint.latitude, currentPoint.longitude]);
      
      // Update progress
      updateProgress();
      
    }, playbackSpeed);
  }

  // Pause playback
  function pausePlayback() {
    isPlaying = false;
    document.getElementById('play-icon').textContent = '‚ñ∂Ô∏è';
    document.getElementById('play-text').textContent = 'Oynat';
    
    if (playbackInterval) {
      clearInterval(playbackInterval);
      playbackInterval = null;
    }
  }

  // Reset playback
  function resetPlayback() {
    pausePlayback();
    playbackIndex = 0;
    
    if (animatedPolyline) {
      animatedPolyline.setLatLngs([]);
    }
    
    if (truckMarker && routeData.length > 0) {
      truckMarker.setLatLng([routeData[0].latitude, routeData[0].longitude]);
    }
    
    updateProgress();
  }

  // Change playback speed
  function changeSpeed() {
    playbackSpeed = parseInt(document.getElementById('speed-select').value);
    
    if (isPlaying) {
      pausePlayback();
      startPlayback();
    }
  }

  // Update progress bar and stats
  function updateProgress() {
    if (routeData.length === 0) return;
    
    const progress = (playbackIndex / (routeData.length - 1)) * 100;
    document.getElementById('progress-bar').style.width = `${progress}%`;
    document.getElementById('stat-progress').textContent = `‚è±Ô∏è ${Math.round(progress)}%`;
    
    if (routeData[playbackIndex]) {
      const currentTime = new Date(routeData[playbackIndex].recorded_at).toLocaleTimeString('tr-TR', {hour: '2-digit', minute: '2-digit'});
      document.getElementById('time-current').textContent = currentTime;
    }
  }
</script>
