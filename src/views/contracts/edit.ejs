<script>
  // Toast System
  function showToast(type, title, message, duration = 4000) {
    const container = document.getElementById('toastContainer');
    const icons = {
      success: '‚úÖ',
      error: '‚ùå',
      warning: '‚ö†Ô∏è',
      info: '‚ÑπÔ∏è'
    };

    const toast = document.createElement('div');
    toast.className = `toast toast-${type}`;
    toast.innerHTML = `
      <span class="toast-icon">${icons[type]}</span>
      <div class="toast-content">
        <div class="toast-title">${title}</div>
        <div class="toast-message">${message}</div>
      </div>
      <button class="toast-close" onclick="this.parentElement.remove()">‚úï</button>
    `;

    container.appendChild(toast);

    // Auto remove
    setTimeout(() => {
      toast.classList.add('hiding');
      setTimeout(() => toast.remove(), 300);
    }, duration);
  }

  // Modern Confirm Modal
  let pendingDeleteFileId = null;

  function showConfirmModal(title, message, onConfirm) {
    document.getElementById('confirmTitle').textContent = title;
    document.getElementById('confirmMessage').innerHTML = message;
    document.getElementById('confirmAction').onclick = onConfirm;
    document.getElementById('confirmModal').style.display = 'flex';
  }

  function closeConfirmModal() {
    document.getElementById('confirmModal').style.display = 'none';
    pendingDeleteFileId = null;
  }

  // Close modal on overlay click
  document.getElementById('confirmModal').addEventListener('click', function(e) {
    if (e.target === this) closeConfirmModal();
  });

  // Close modal on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') closeConfirmModal();
  });

  const contractId = <%= contract.id %>;
  const fileInput = document.getElementById('newFileInput');
  const uploadArea = document.getElementById('fileUploadArea');
  const btnAddFile = document.getElementById('btnAddFile');
  const filesList = document.getElementById('filesList');
  let selectedFile = null;

  // Load existing files
  loadContractFiles();

  // File input change
  fileInput.addEventListener('change', function(e) {
    if (e.target.files.length > 0) {
      selectFile(e.target.files[0]);
    }
  });

  // Click to select
  uploadArea.addEventListener('click', () => fileInput.click());

  // Drag and drop
  uploadArea.addEventListener('dragover', (e) => {
    e.preventDefault();
    uploadArea.classList.add('dragover');
  });

  uploadArea.addEventListener('dragleave', () => {
    uploadArea.classList.remove('dragover');
  });

  uploadArea.addEventListener('drop', (e) => {
    e.preventDefault();
    uploadArea.classList.remove('dragover');
    if (e.dataTransfer.files.length > 0) {
      const file = e.dataTransfer.files[0];
      if (file.type === 'application/pdf') {
        selectFile(file);
      } else {
        showToast('error', 'Ge√ßersiz Dosya', 'Sadece PDF dosyalarƒ± y√ºklenebilir.');
      }
    }
  });

  function selectFile(file) {
    selectedFile = file;
    uploadArea.classList.add('has-file');
    uploadArea.innerHTML = `
      <div class="upload-placeholder">
        <span class="upload-icon">‚úÖ</span>
        <span class="selected-file-name">${file.name}</span>
        <span style="font-size:12px;">${(file.size / 1024 / 1024).toFixed(2)} MB</span>
      </div>
    `;
    btnAddFile.disabled = false;
  }

  // Add file button
  btnAddFile.addEventListener('click', uploadFile);

  async function uploadFile() {
    if (!selectedFile) return;

    const formData = new FormData();
    formData.append('file', selectedFile);
    formData.append('description', document.getElementById('newFileDescription').value);

    btnAddFile.disabled = true;
    btnAddFile.textContent = '‚è≥ Y√ºkleniyor...';

    try {
      const response = await fetch(`/contracts/${contractId}/files`, {
        method: 'POST',
        body: formData
      });

      const result = await response.json();

      if (result.success) {
        // Reload file list
        loadContractFiles();
        
        // Reset upload form
        selectedFile = null;
        document.getElementById('newFileDescription').value = '';
        uploadArea.classList.remove('has-file');
        uploadArea.innerHTML = `
          <div class="upload-placeholder">
            <span class="upload-icon">üì§</span>
            <span>PDF dosyasƒ±nƒ± buraya s√ºr√ºkleyin veya tƒ±klayƒ±n</span>
          </div>
        `;
        btnAddFile.disabled = true;
        btnAddFile.textContent = 'üìé Dosya Ekle';
        
        showToast('success', 'Ba≈üarƒ±lƒ±', 'Dosya ba≈üarƒ±yla eklendi!');
      } else {
        showToast('error', 'Hata', result.error);
        btnAddFile.disabled = false;
        btnAddFile.textContent = 'üìé Dosya Ekle';
      }
    } catch (error) {
      console.error('Upload error:', error);
      showToast('error', 'Hata', 'Dosya y√ºklenirken hata olu≈ütu');
      btnAddFile.disabled = false;
      btnAddFile.textContent = 'üìé Dosya Ekle';
    }
  }

  async function loadContractFiles() {
    try {
      const response = await fetch(`/contracts/${contractId}/files`);
      const result = await response.json();

      if (result.success && result.files.length > 0) {
        // Keep original file, add additional files
        let html = `
          <div class="file-item">
            <div class="file-icon">üìÑ</div>
            <div class="file-info">
              <div class="file-name"><%= contract.file_name %></div>
              <span class="file-badge">Orijinal</span>
            </div>
            <a href="<%= contract.file_path %>" target="_blank" class="file-download" title="ƒ∞ndir">
              üì•
            </a>
          </div>
        `;

        result.files.forEach(file => {
          // Skip if same as original
          if (file.file_path === '<%= contract.file_path %>') return;
          
          html += `
            <div class="file-item" data-file-id="${file.id}">
              <div class="file-icon">üìÑ</div>
              <div class="file-info">
                <div class="file-name">${file.file_name}</div>
                ${file.description ? `<div class="file-desc">${file.description}</div>` : ''}
                <div class="file-meta">v${file.version} ‚Ä¢ ${file.uploaded_at_formatted || ''}</div>
              </div>
              <a href="${file.file_path}" target="_blank" class="file-download" title="ƒ∞ndir">
                üì•
              </a>
              <button type="button" class="file-delete" onclick="deleteFile(${file.id})" title="Sil">
                üóëÔ∏è
              </button>
            </div>
          `;
        });

        filesList.innerHTML = html;
      }
    } catch (error) {
      console.error('Load files error:', error);
    }
  }

  async function deleteFile(fileId) {
    showConfirmModal(
      'Dosya Silme',
      'Bu dosyayƒ± silmek istediƒüinizden emin misiniz?<br><br><small style="color:#ef4444;">Bu i≈ülem geri alƒ±namaz!</small>',
      async () => {
        closeConfirmModal();
        
        try {
          const response = await fetch(`/contracts/${contractId}/files/${fileId}/delete`, {
            method: 'POST'
          });

          const result = await response.json();

          if (result.success) {
            // Remove from DOM
            const fileItem = document.querySelector(`[data-file-id="${fileId}"]`);
            if (fileItem) fileItem.remove();
            showToast('success', 'Ba≈üarƒ±lƒ±', 'Dosya silindi');
          } else {
            showToast('error', 'Hata', result.error);
          }
        } catch (error) {
          console.error('Delete error:', error);
          showToast('error', 'Hata', 'Dosya silinirken hata olu≈ütu');
        }
      }
    );
  }
</script>