<style>
  /* Login sayfası - Full screen modern tasarım */
  .login-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px;
    background: radial-gradient(ellipse at top left, #0a1628 0%, #050d1a 40%, #020810 70%, #000 100%);
    position: relative;
    overflow: hidden;
  }

  /* Matrix Rain Canvas */
  .matrix-rain {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0.4;
    pointer-events: none;
  }

  /* Animated background effects */
  .login-page::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: 
      radial-gradient(circle at 20% 30%, rgba(59, 130, 246, 0.08) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, rgba(99, 102, 241, 0.06) 0%, transparent 40%),
      radial-gradient(circle at 50% 50%, rgba(14, 165, 233, 0.04) 0%, transparent 50%);
    animation: loginBgPulse 15s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes loginBgPulse {
    0%, 100% { transform: translate(0, 0) scale(1); opacity: 1; }
    50% { transform: translate(-2%, 2%) scale(1.05); opacity: 0.8; }
  }

  /* Floating particles container */
  .login-particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
    z-index: 1;
  }

  .login-particle {
    position: absolute;
    border-radius: 50%;
    background: rgba(59, 130, 246, 0.3);
    box-shadow: 0 0 10px rgba(59, 130, 246, 0.5);
    animation: floatParticle linear infinite;
  }

  .login-particle:nth-child(1) { width: 4px; height: 4px; left: 10%; animation-duration: 20s; animation-delay: 0s; }
  .login-particle:nth-child(2) { width: 6px; height: 6px; left: 20%; animation-duration: 25s; animation-delay: -5s; background: rgba(99, 102, 241, 0.3); }
  .login-particle:nth-child(3) { width: 3px; height: 3px; left: 35%; animation-duration: 18s; animation-delay: -2s; }
  .login-particle:nth-child(4) { width: 5px; height: 5px; left: 50%; animation-duration: 22s; animation-delay: -7s; background: rgba(14, 165, 233, 0.3); }
  .login-particle:nth-child(5) { width: 4px; height: 4px; left: 65%; animation-duration: 28s; animation-delay: -3s; }
  .login-particle:nth-child(6) { width: 7px; height: 7px; left: 75%; animation-duration: 24s; animation-delay: -10s; background: rgba(99, 102, 241, 0.25); }
  .login-particle:nth-child(7) { width: 3px; height: 3px; left: 85%; animation-duration: 19s; animation-delay: -8s; }
  .login-particle:nth-child(8) { width: 5px; height: 5px; left: 92%; animation-duration: 26s; animation-delay: -4s; background: rgba(14, 165, 233, 0.25); }
  .login-particle:nth-child(9) { width: 4px; height: 4px; left: 5%; animation-duration: 21s; animation-delay: -12s; background: rgba(129, 140, 248, 0.25); }
  .login-particle:nth-child(10) { width: 6px; height: 6px; left: 45%; animation-duration: 27s; animation-delay: -6s; background: rgba(96, 165, 250, 0.2); }
  .login-particle:nth-child(11) { width: 3px; height: 3px; left: 55%; animation-duration: 23s; animation-delay: -9s; background: rgba(59, 130, 246, 0.2); }
  .login-particle:nth-child(12) { width: 5px; height: 5px; left: 80%; animation-duration: 20s; animation-delay: -11s; background: rgba(147, 197, 253, 0.2); }

  @keyframes floatParticle {
    0% { 
      transform: translateY(100vh) rotate(0deg); 
      opacity: 0; 
    }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% { 
      transform: translateY(-100vh) rotate(720deg); 
      opacity: 0; 
    }
  }

  /* Aurora effect */
  .login-aurora {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 60%;
    background: 
      linear-gradient(180deg, 
        rgba(59, 130, 246, 0.05) 0%, 
        rgba(99, 102, 241, 0.03) 30%, 
        transparent 100%);
    animation: auroraWave 8s ease-in-out infinite;
    pointer-events: none;
    z-index: 1;
  }

  @keyframes auroraWave {
    0%, 100% { 
      opacity: 0.5; 
      transform: translateY(0) scaleY(1); 
    }
    50% { 
      opacity: 0.8; 
      transform: translateY(-20px) scaleY(1.1); 
    }
  }

  /* Light theme - Clean minimal look */
  [data-theme="light"] .login-particles,
  [data-theme="light"] .login-particle {
    display: none !important;
  }

  [data-theme="light"] .login-aurora {
    background: linear-gradient(180deg, rgba(34, 197, 94, 0.02) 0%, transparent 40%) !important;
  }

  /* Light theme submit button - Green */
  [data-theme="light"] .login-submit {
    background: linear-gradient(135deg, #16a34a 0%, #15803d 100%) !important;
    box-shadow: 0 4px 20px rgba(22, 163, 74, 0.25) !important;
  }

  [data-theme="light"] .login-submit:hover {
    box-shadow: 0 8px 30px rgba(22, 163, 74, 0.35) !important;
  }

  /* Light theme logo icon */
  [data-theme="light"] .login-logo-icon {
    background: linear-gradient(135deg, #16a34a 0%, #15803d 100%) !important;
  }

  /* Light theme version badge */
  [data-theme="light"] .login-version {
    background: rgba(241, 245, 249, 0.9) !important;
    border-color: rgba(34, 197, 94, 0.3) !important;
    color: #475569 !important;
  }

  [data-theme="light"] .login-version-dot {
    background: #22c55e !important;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.5) !important;
  }

  /* Light theme connection status - Same as version badge */
  [data-theme="light"] .login-connection-status {
    background: rgba(241, 245, 249, 0.9) !important;
    border-color: rgba(34, 197, 94, 0.3) !important;
    color: #475569 !important;
  }

  [data-theme="light"] .login-connection-status.online .login-connection-dot {
    background: #22c55e !important;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.5) !important;
  }

  [data-theme="light"] .login-connection-status.online .login-connection-text {
    color: #475569 !important;
  }

  /* Static particles overlay */
  .login-page::after {
    content: "";
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 10% 20%, rgba(59, 130, 246, 0.06) 1px, transparent 1px),
      radial-gradient(circle at 90% 80%, rgba(99, 102, 241, 0.05) 1px, transparent 1px),
      radial-gradient(circle at 50% 10%, rgba(59, 130, 246, 0.08) 2px, transparent 2px),
      radial-gradient(circle at 30% 60%, rgba(147, 197, 253, 0.04) 1px, transparent 1px),
      radial-gradient(circle at 70% 40%, rgba(96, 165, 250, 0.05) 1px, transparent 1px);
    background-size: 100px 100px, 150px 150px, 200px 200px, 120px 120px, 180px 180px;
    pointer-events: none;
    z-index: 2;
  }

  /* Hide overlay in light theme */
  [data-theme="light"] .login-page::after {
    display: none !important;
  }

  .login-container {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 460px;
  }

  /* Glass card with modern styling */
  .login-card {
    position: relative;
    background: linear-gradient(145deg, rgba(15, 23, 42, 0.92) 0%, rgba(7, 17, 38, 0.95) 100%);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 24px;
    padding: 40px 36px;
    box-shadow: 
      0 25px 80px -12px rgba(0, 0, 0, 0.6),
      0 0 40px rgba(59, 130, 246, 0.1),
      0 0 0 1px rgba(255, 255, 255, 0.03),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    overflow: hidden;
  }

  /* Subtle inner glow */
  .login-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 120px;
    background: linear-gradient(180deg, rgba(59, 130, 246, 0.08) 0%, transparent 100%);
    pointer-events: none;
    border-radius: 24px 24px 0 0;
  }

  /* Header section */
  .login-header {
    position: relative;
    text-align: center;
    margin-bottom: 32px;
  }

  .login-logo-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 20px;
    background: linear-gradient(135deg, #2563eb 0%, #4f46e5 50%, #6366f1 100%);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 
      0 12px 40px rgba(59, 130, 246, 0.4),
      0 0 30px rgba(59, 130, 246, 0.2),
      0 0 0 1px rgba(255, 255, 255, 0.1);
    transform: rotate(-3deg);
    transition: transform 0.3s ease;
  }

  .login-logo-icon:hover {
    transform: rotate(0deg) scale(1.05);
  }

  .login-logo-icon svg {
    width: 36px;
    height: 36px;
    color: #ffffff;
  }

  .login-brand {
    font-size: 26px;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: #f8fafc;
    margin: 0 0 6px;
    text-transform: uppercase;
  }

  .login-brand-sub {
    font-size: 13px;
    color: #94a3b8;
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  .login-version {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 14px;
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 999px;
    font-size: 11px;
    color: #94a3b8;
  }

  .login-version-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #3b82f6;
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.6);
    animation: loginDotPulse 2s ease-in-out infinite;
  }

  @keyframes loginDotPulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(0.9); }
  }

  /* Divider */
  .login-divider {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 28px;
  }

  .login-divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.2), transparent);
  }

  .login-divider-text {
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
  }

  /* Form styling */
  .login-form {
    position: relative;
  }

  .login-field {
    margin-bottom: 20px;
  }

  .login-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #94a3b8;
    margin-bottom: 10px;
  }

  .login-label-icon {
    width: 16px;
    height: 16px;
    color: #64748b;
  }

  .login-input-wrap {
    position: relative;
  }

  .login-input {
    width: 100%;
    padding: 14px 18px;
    padding-left: 48px;
    background: rgba(2, 6, 23, 0.6);
    border: 1px solid rgba(71, 85, 105, 0.3);
    border-radius: 14px;
    color: #f1f5f9;
    font-size: 15px;
    outline: none;
    transition: all 0.2s ease;
  }

  .login-input::placeholder {
    color: #475569;
  }

  .login-input:focus {
    border-color: #3b82f6;
    background: rgba(2, 6, 23, 0.8);
    box-shadow: 
      0 0 0 3px rgba(59, 130, 246, 0.2),
      0 0 20px rgba(59, 130, 246, 0.3),
      0 0 40px rgba(59, 130, 246, 0.1),
      0 4px 20px rgba(0, 0, 0, 0.3);
    animation: neonPulse 2s ease-in-out infinite;
  }

  @keyframes neonPulse {
    0%, 100% { 
      box-shadow: 
        0 0 0 3px rgba(59, 130, 246, 0.2),
        0 0 20px rgba(59, 130, 246, 0.3),
        0 0 40px rgba(59, 130, 246, 0.1),
        0 4px 20px rgba(0, 0, 0, 0.3);
    }
    50% { 
      box-shadow: 
        0 0 0 3px rgba(59, 130, 246, 0.3),
        0 0 30px rgba(59, 130, 246, 0.5),
        0 0 60px rgba(59, 130, 246, 0.2),
        0 4px 20px rgba(0, 0, 0, 0.3);
    }
  }

  .login-input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: #64748b;
    pointer-events: none;
    transition: color 0.2s ease;
  }

  .login-input:focus + .login-input-icon,
  .login-input:focus ~ .login-input-icon {
    color: #3b82f6;
    filter: drop-shadow(0 0 4px rgba(59, 130, 246, 0.6));
  }

  /* Password toggle */
  .login-password-toggle {
    position: absolute;
    right: 14px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #64748b;
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
  }

  .login-password-toggle:hover {
    color: #94a3b8;
  }

  .login-password-toggle svg {
    width: 18px;
    height: 18px;
  }

  /* Remember me */
  .login-options {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
  }

  .login-remember {
    display: flex;
    align-items: center;
    gap: 10px;
    cursor: pointer;
  }

  .login-remember input[type='checkbox'] {
    appearance: none;
    -webkit-appearance: none;
    width: 18px;
    height: 18px;
    border: 2px solid rgba(71, 85, 105, 0.5);
    border-radius: 5px;
    background: rgba(2, 6, 23, 0.5);
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .login-remember input[type='checkbox']:checked {
    background: linear-gradient(135deg, #2563eb, #4f46e5);
    border-color: transparent;
  }

  .login-remember input[type='checkbox']:checked::after {
    content: "";
    position: absolute;
    left: 5px;
    top: 2px;
    width: 5px;
    height: 9px;
    border: solid #fff;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }

  .login-remember-text {
    font-size: 13px;
    color: #94a3b8;
    user-select: none;
  }

  /* Caps Lock Warning */
  .login-capslock-warning {
    display: none;
    align-items: center;
    gap: 8px;
    padding: 10px 14px;
    background: rgba(234, 179, 8, 0.15);
    border: 1px solid rgba(234, 179, 8, 0.3);
    border-radius: 10px;
    margin-top: 10px;
    animation: capsWarn 0.3s ease;
  }

  .login-capslock-warning.show {
    display: flex;
  }

  @keyframes capsWarn {
    0% { opacity: 0; transform: translateY(-5px); }
    100% { opacity: 1; transform: translateY(0); }
  }

  .login-capslock-warning svg {
    width: 18px;
    height: 18px;
    color: #eab308;
    flex-shrink: 0;
  }

  .login-capslock-warning span {
    font-size: 12px;
    color: #fde047;
  }

  /* Submit button */
  .login-submit {
    width: 100%;
    padding: 16px 24px;
    background: linear-gradient(135deg, #2563eb 0%, #4f46e5 100%);
    border: none;
    border-radius: 14px;
    color: #ffffff;
    font-size: 15px;
    font-weight: 600;
    letter-spacing: 0.02em;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.2s ease;
    box-shadow: 
      0 8px 30px rgba(59, 130, 246, 0.35),
      0 0 0 1px rgba(255, 255, 255, 0.1) inset;
    position: relative;
    overflow: hidden;
  }

  .login-submit::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
    transition: left 0.5s ease;
  }

  .login-submit:hover {
    transform: translateY(-2px);
    box-shadow: 
      0 12px 40px rgba(59, 130, 246, 0.5),
      0 0 30px rgba(59, 130, 246, 0.3),
      0 0 0 1px rgba(255, 255, 255, 0.15) inset;
  }

  .login-submit:hover::before {
    left: 100%;
  }

  .login-submit:active {
    transform: translateY(0);
  }

  .login-submit svg {
    width: 18px;
    height: 18px;
  }

  /* Loading State */
  .login-submit-spinner {
    display: none;
    width: 18px;
    height: 18px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: #fff;
    border-radius: 50%;
    animation: submitSpin 0.7s linear infinite;
  }

  @keyframes submitSpin {
    to { transform: rotate(360deg); }
  }

  .login-submit.loading .login-submit-spinner {
    display: block;
  }

  .login-submit.loading .login-submit-icon {
    display: none;
  }

  .login-submit.loading {
    pointer-events: none;
    opacity: 0.85;
  }

  /* Error message */
  .login-error {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: rgba(127, 29, 29, 0.2);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 12px;
    margin-bottom: 24px;
    animation: loginErrorShake 0.4s ease;
  }

  @keyframes loginErrorShake {
    0%, 100% { transform: translateX(0); }
    20%, 60% { transform: translateX(-6px); }
    40%, 80% { transform: translateX(6px); }
  }

  .login-error-icon {
    width: 20px;
    height: 20px;
    color: #ef4444;
    flex-shrink: 0;
  }

  .login-error-text {
    font-size: 13px;
    color: #fca5a5;
    line-height: 1.4;
  }

  /* Status Container - ERP version + Connection status */
  .login-status-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-top: 16px;
  }

  /* Connection Status */
  .login-connection-status {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 14px;
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 999px;
    font-size: 11px;
    color: #94a3b8;
    transition: all 0.3s ease;
  }

  .login-connection-status.online {
    border-color: rgba(148, 163, 184, 0.2);
  }

  .login-connection-status.offline {
    border-color: rgba(239, 68, 68, 0.4);
  }

  .login-connection-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #3b82f6;
    box-shadow: 0 0 8px rgba(59, 130, 246, 0.6);
    animation: loginDotPulse 2s ease-in-out infinite;
  }

  .login-connection-status.offline .login-connection-dot {
    background: #ef4444;
    box-shadow: 0 0 8px rgba(239, 68, 68, 0.6);
    animation: none;
  }

  .login-connection-text {
    font-weight: 500;
  }

  .login-connection-status.online .login-connection-text {
    color: #94a3b8;
  }

  .login-connection-status.offline .login-connection-text {
    color: #f87171;
  }

  /* Footer */
  .login-footer {
    margin-top: 28px;
    padding-top: 20px;
    border-top: 1px solid rgba(148, 163, 184, 0.1);
    text-align: center;
  }

  .login-footer-text {
    font-size: 12px;
    color: #64748b;
  }

  .login-footer-link {
    color: #60a5fa;
    transition: color 0.2s ease;
  }

  .login-footer-link:hover {
    color: #93c5fd;
  }

  /* Responsive */
  @media (max-width: 520px) {
    .login-page {
      padding: 16px;
    }

    .login-card {
      padding: 32px 24px;
      border-radius: 20px;
    }

    .login-logo-icon {
      width: 60px;
      height: 60px;
    }

    .login-brand {
      font-size: 22px;
    }

    .login-input {
      padding: 12px 16px;
      padding-left: 44px;
      font-size: 14px;
    }

    .login-submit {
      padding: 14px 20px;
      font-size: 14px;
    }
  }

  /* Theme Buttons Container */
  .login-theme-buttons {
    display: flex;
    gap: 12px;
    margin-top: 20px;
  }

  .login-theme-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 16px;
    border-radius: 12px;
    font-size: 13px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 1px solid;
  }

  .login-theme-btn svg {
    width: 16px;
    height: 16px;
  }

  /* Light Theme Button */
  .login-theme-btn.light-btn {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(251, 191, 36, 0.3);
    color: #fbbf24;
  }

  .login-theme-btn.light-btn:hover {
    background: rgba(251, 191, 36, 0.15);
    border-color: rgba(251, 191, 36, 0.5);
    color: #fcd34d;
  }

  /* Dark Theme Button */
  .login-theme-btn.dark-btn {
    background: rgba(99, 102, 241, 0.1);
    border-color: rgba(99, 102, 241, 0.3);
    color: #a5b4fc;
  }

  .login-theme-btn.dark-btn:hover {
    background: rgba(99, 102, 241, 0.2);
    border-color: rgba(99, 102, 241, 0.5);
    color: #c7d2fe;
  }

  /* Active states */
  [data-theme="light"] .login-theme-btn.light-btn {
    background: rgba(34, 197, 94, 0.15);
    border-color: rgba(34, 197, 94, 0.5);
    color: #16a34a;
    box-shadow: 0 0 12px rgba(34, 197, 94, 0.2);
  }

  [data-theme="dark"] .login-theme-btn.dark-btn,
  :root:not([data-theme]) .login-theme-btn.dark-btn {
    background: rgba(99, 102, 241, 0.2);
    border-color: rgba(99, 102, 241, 0.5);
