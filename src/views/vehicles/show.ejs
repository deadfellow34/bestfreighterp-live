<%- include('../partials/navbar') %>

<style>
  html, body {
    background: radial-gradient(ellipse at top left, #0a1628 0%, #050d1a 40%, #020810 70%, #000 100%) !important;
    min-height: 100vh;
  }

  .vehicle-detail {
    max-width: 1200px;
    margin: 0 auto;
    padding: 16px 20px 30px;
  }

  /* Header */
  .detail-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    padding: 14px 18px;
    background: rgba(15, 23, 42, 0.85);
    border: 1px solid rgba(59, 130, 246, 0.15);
    border-radius: 12px;
    backdrop-filter: blur(10px);
  }

  .detail-header h1 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #e5e7eb;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .plate-badge {
    background: linear-gradient(135deg, #3b82f6, #2563eb);
    color: white;
    padding: 4px 12px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 700;
  }

  .driver-name {
    color: #9ca3af;
    font-size: 13px;
    font-weight: 400;
    margin-left: 12px;
  }

  .btn-back {
    padding: 8px 16px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #60a5fa;
    border-radius: 8px;
    font-size: 13px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-back:hover {
    background: rgba(59, 130, 246, 0.2);
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
    margin-bottom: 16px;
  }

  .stat-card {
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 10px;
    padding: 16px;
    text-align: center;
  }

  .stat-value {
    font-size: 22px;
    font-weight: 700;
    color: #f9fafb;
  }

  .stat-value.green { color: #10b981; }
  .stat-value.blue { color: #3b82f6; }
  .stat-value.amber { color: #f59e0b; }

  .stat-label {
    font-size: 12px;
    color: #9ca3af;
    margin-top: 4px;
  }

  .stat-sub {
    font-size: 11px;
    color: #6b7280;
    margin-top: 2px;
  }
  
  /* Accounting stat card special style */
  .accounting-display {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
  }
  
  .accounting-counts {
    display: flex;
    align-items: center;
    gap: 24px;
  }
  
  .accounting-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .accounting-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }
  
  .accounting-dot.blue { background: #3b82f6; }
  .accounting-dot.green { background: #10b981; }
  
  .accounting-label {
    font-size: 13px;
    color: #9ca3af;
  }
  
  .accounting-num {
    font-size: 18px;
    font-weight: 700;
  }
  
  .accounting-num.blue { color: #60a5fa; }
  .accounting-num.green { color: #34d399; }
  
  .accounting-total {
    font-size: 13px;
    color: #9ca3af;
  }
  
  .accounting-total strong {
    color: #34d399;
    font-weight: 700;
  }

  /* Main Layout */
  .main-layout {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 16px;
  }

  /* Trips Section */
  .trips-section {
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 10px;
    padding: 16px;
  }

  .section-title {
    font-size: 14px;
    font-weight: 600;
    color: #e5e7eb;
    margin: 0 0 12px 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .trip-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .trip-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
    padding: 16px;
    background: rgba(2, 6, 23, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.08);
    border-radius: 10px;
    transition: all 0.2s;
  }

  .trip-row:hover {
    border-color: rgba(59, 130, 246, 0.25);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.3);
  }
  
  .trip-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding-bottom: 10px;
    border-bottom: 1px solid rgba(59, 130, 246, 0.1);
  }
  
  .trip-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 16px;
  }

  /* Trip Left - Position Info */
  .trip-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .trip-pos {
    font-size: 15px;
    font-weight: 700;
    color: #a855f7;
  }
  
  .trip-pos-details {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }
  
  .trip-pos-details span {
    font-size: 12px;
    color: #9ca3af;
  }
  
  .trip-pos-details span strong {
    color: #60a5fa;
  }

  .trip-meta {
    font-size: 12px;
    color: #9ca3af;
    line-height: 1.6;
  }

  .trip-meta strong {
    color: #e5e7eb;
  }
  
  /* Detail Box */
  .detail-box {
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 8px;
    padding: 12px;
  }
  
  .detail-box-title {
    font-size: 11px;
    color: #6b7280;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 4px 0;
  }
  
  .detail-row:not(:last-child) {
    border-bottom: 1px solid rgba(59, 130, 246, 0.05);
  }
  
  .detail-label {
    font-size: 12px;
    color: #9ca3af;
  }
  
  .detail-value {
    font-size: 13px;
    font-weight: 600;
    color: #e5e7eb;
  }
  
  .detail-value.blue { color: #60a5fa; }
  .detail-value.green { color: #34d399; }
  .detail-value.red { color: #f87171; }
  .detail-value.amber { color: #fbbf24; }

  /* Trip Middle - Stats */
  .trip-stats {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .trip-stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .trip-stat-value {
    font-size: 13px;
    font-weight: 600;
    color: #e5e7eb;
  }

  .trip-stat-label {
    font-size: 10px;
    color: #6b7280;
  }

  .count-pills {
    display: flex;
    gap: 8px;
  }

  .count-pill {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 11px;
    font-weight: 600;
  }

  .count-pill.loading {
    background: rgba(59, 130, 246, 0.15);
    color: #60a5fa;
  }

  .count-pill.unloading {
    background: rgba(16, 185, 129, 0.15);
    color: #34d399;
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }

  .dot.blue { background: #3b82f6; }
  .dot.green { background: #10b981; }

  /* Trip Right - Profit & Actions */
  .trip-right {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  
  .profit-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
  }
  
  .profit-card {
    background: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 8px;
    padding: 10px 12px;
    text-align: center;
  }
  
  .profit-card-label {
    font-size: 10px;
    color: #6b7280;
    margin-bottom: 4px;
  }
  
  .profit-card-value {
    font-size: 15px;
    font-weight: 700;
  }
  
  .profit-card-value.blue { color: #3b82f6; }
  .profit-card-value.red { color: #ef4444; }
  .profit-card-value.green { color: #10b981; }
  .profit-card-value.amber { color: #f59e0b; }

  .profit-display {
    text-align: right;
  }

  .profit-amount {
    font-size: 16px;
    font-weight: 700;
  }

  .profit-amount.positive { color: #10b981; }
  .profit-amount.negative { color: #ef4444; }
  .profit-amount.low { color: #f59e0b; }

  .profit-margin {
    font-size: 10px;
    color: #6b7280;
  }

  .profit-tag {
    display: inline-block;
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 10px;
    font-weight: 700;
    margin-left: 8px;
  }

  .profit-tag.kar { background: rgba(16, 185, 129, 0.15); color: #34d399; }
  .profit-tag.zarar { background: rgba(239, 68, 68, 0.15); color: #f87171; }
  .profit-tag.dusuk { background: rgba(245, 158, 11, 0.15); color: #fbbf24; }

  .trip-actions {
    display: flex;
    gap: 8px;
    justify-content: flex-end;
  }
  
  .trip-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 10px;
    border-top: 1px solid rgba(59, 130, 246, 0.1);
  }

  .btn-sm {
    padding: 5px 10px;
    font-size: 11px;
    font-weight: 600;
    border-radius: 5px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn-primary {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border: none;
  }

  .btn-outline-sm {
    background: transparent;
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #60a5fa;
  }

  .btn-sm:hover {
    transform: translateY(-1px);
  }

  /* Notes Section */
  .notes-section {
    background: rgba(15, 23, 42, 0.8);
    border: 1px solid rgba(59, 130, 246, 0.1);
    border-radius: 10px;
    padding: 16px;
    height: fit-content;
  }

  .notes-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
  }

  .notes-actions {
    display: flex;
    gap: 6px;
  }

  .btn-note {
    padding: 5px 10px;
    font-size: 11px;
    background: transparent;
    border: 1px solid rgba(59, 130, 246, 0.2);
    color: #9ca3af;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-note:hover {
    border-color: rgba(59, 130, 246, 0.4);
    color: #e5e7eb;
  }

  .note-form {
    display: none;
    margin-bottom: 12px;
  }

  .note-form textarea {
    width: 100%;
    padding: 10px;
    background: rgba(2, 6, 23, 0.8);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 6px;
    color: #e5e7eb;
    font-size: 12px;
    resize: vertical;
    min-height: 80px;
    box-sizing: border-box;
  }

  .note-form textarea:focus {
    outline: none;
    border-color: #3b82f6;
  }

  .note-form-actions {
    display: flex;
    gap: 6px;
    justify-content: flex-end;
    margin-top: 8px;
  }

  .note-item {
    padding: 10px;
    background: rgba(2, 6, 23, 0.5);
    border-radius: 6px;
    margin-bottom: 8px;
  }

  .note-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6px;
  }

  .note-author {
    font-size: 11px;
    font-weight: 600;
    color: #60a5fa;
  }

  .note-date {
    font-size: 10px;
    color: #6b7280;
  }

  .note-body {
    font-size: 12px;
    color: #d1d5db;
    white-space: pre-wrap;
    line-height: 1.4;
  }

  .edit-controls {
    display: none;
    gap: 4px;
  }

  .empty-notes {
    color: #6b7280;
    font-size: 12px;
    text-align: center;
    padding: 20px;
  }

  /* Pagination */
  .pagination {
    display: flex;
    gap: 6px;
    justify-content: center;
    margin-top: 16px;
  }

  .pagination a, .pagination span {
    padding: 6px 12px;
    font-size: 12px;
    border-radius: 6px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .pagination a {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    color: #60a5fa;
  }

  .pagination a:hover {
    background: rgba(59, 130, 246, 0.2);
  }

  .pagination span.current {
    background: #3b82f6;
    color: white;
  }

  .pagination span.dots {
    color: #6b7280;
    border: none;
  }

  /* Delete Modal */
  .modal-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }

  .modal-box {
    background: rgba(15, 23, 42, 0.95);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 12px;
    padding: 20px;
    width: 360px;
    backdrop-filter: blur(20px);
  }

  .modal-title {
    font-size: 15px;
    font-weight: 600;
    color: #f87171;
    margin-bottom: 8px;
  }

  .modal-text {
    font-size: 13px;
    color: #9ca3af;
    margin-bottom: 16px;
  }

  .modal-actions {
    display: flex;
    gap: 8px;
    justify-content: flex-end;
  }

  .btn-cancel {
    padding: 8px 14px;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #9ca3af;
    border-radius: 6px;
    font-size: 12px;
    cursor: pointer;
  }

  .btn-delete {
    padding: 8px 14px;
    background: linear-gradient(135deg, #ef4444, #dc2626);
    border: none;
    color: white;
    border-radius: 6px;
    font-size: 12px;
    font-weight: 600;
    cursor: pointer;
  }

  @media (max-width: 1024px) {
    .main-layout {
      grid-template-columns: 1fr;
    }
    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .trip-row {
      grid-template-columns: 1fr;
      gap: 10px;
    }
    .trip-right {
      flex-direction: row;
      align-items: center;
    }
  }
</style>

<div class="vehicle-detail">
  <!-- Header -->
  <div class="detail-header">
    <h1>
      üöõ <span class="plate-badge"><%= truck.plate %></span>
      <span class="driver-name">S√ºr√ºc√º: <%= truck.driver_name || '-' %></span>
    </h1>
    <a href="/vehicles" class="btn-back">‚Üê Geri</a>
  </div>

  <% 
    const _totalKm = Number(stats.total_km || 0);
    const _kmEuroEstimate = (_totalKm * 0.2).toFixed(2);
    const _totalProfit = (recentTrips && recentTrips.length) ? recentTrips.reduce((acc, t) => {
      const p = t && t.tripProfit && t.tripProfit.profitEUR ? Number(t.tripProfit.profitEUR) : 0;
      return acc + p;
    }, 0) : 0;
    
    let _totalLoading = 0, _totalUnloading = 0, _totalAccountingEuro = 0;
    if (recentTrips && recentTrips.length) {
      recentTrips.forEach(t => {
        if (t && t.km) {
          const l = (t.km.loading_count || 0) + (t.km.europe_count || 0);
          const u = (t.km.unloading_count || 0);
          _totalLoading += l;
          _totalUnloading += u;
          _totalAccountingEuro += (l + u) * 25;
        }
      });
    }
  %>

