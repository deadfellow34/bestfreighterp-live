    <div class="stat-card" style="position:relative; overflow:hidden; background: linear-gradient(135deg, rgba(245,158,11,0.1) 0%, rgba(180,83,9,0.2) 100%); border: 1px solid rgba(245,158,11,0.3);">
      <div style="position:absolute; top:-20px; right:-20px; width:80px; height:80px; background:radial-gradient(circle, rgba(245,158,11,0.2) 0%, transparent 70%); border-radius:50%;"></div>
      <div style="position:absolute; bottom:-10px; left:-10px; width:50px; height:50px; background:radial-gradient(circle, rgba(251,191,36,0.15) 0%, transparent 70%); border-radius:50%;"></div>
      <div style="position:relative; z-index:1; text-align:center;">
        <div style="font-size:28px; font-weight:900; background: linear-gradient(135deg, <%= _totalProfit >= 0 ? '#10b981, #34d399, #6ee7b7' : '#f59e0b, #fbbf24, #fcd34d' %>); -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-shadow: 0 0 40px rgba(<%= _totalProfit >= 0 ? '16,185,129' : '245,158,11' %>,0.5);"><%= Number(_totalProfit).toLocaleString('en-US', {minimumFractionDigits:2}) %> ‚Ç¨</div>
        <div style="font-size:11px; color:#9ca3af; letter-spacing:1px; text-transform:uppercase; margin-top:8px;">Toplam Profit</div>
      </div>
    </div>
  </div>

  <!-- Main Layout -->
  <div class="main-layout">
    <!-- Trips Section -->
    <div class="trips-section">
      <h3 class="section-title">üìã Son Seferler</h3>
      
      <div class="trip-list">
        <% if (recentTrips && recentTrips.length > 0) { %>
          <% recentTrips.forEach(trip => { %>
            <% 
              const uids = (trip.loads || []).map(l => l.uid).filter(Boolean);
              const faturaKimes = [...new Set((trip.loads || []).map(l => l.fatura_kime).filter(Boolean))];
              const faturaNolar = (trip.loads || []).map(l => l.fatura_no).filter(Boolean);
              const ordinos = (trip.loads || []).filter(l => l.ordino_cost && Number(l.ordino_cost) > 0).map(l => ({ cost: l.ordino_cost, fatura_no: l.fatura_no }));
              const loading = trip.km ? (trip.km.loading_count || 0) + (trip.km.europe_count || 0) : 0;
              const unloading = trip.km ? (trip.km.unloading_count || 0) : 0;
              const accountingCost = (loading + unloading) * 25;
              const totalKm = trip.km ? (trip.km.total_km || 0) : 0;
              const kmEuro = (totalKm * 0.2).toFixed(2);
              const profit = trip.tripProfit ? trip.tripProfit.profitEUR : 0;
              const revenue = trip.tripProfit ? trip.tripProfit.revenueEUR : 0;
              const costs = trip.tripProfit ? trip.tripProfit.costsEUR : 0;
              const profitClass = profit < 0 ? 'negative' : (profit === 0 || (revenue && (profit/revenue) < 0.12) ? 'low' : 'positive');
              const tagClass = profit < 0 ? 'zarar' : (profit === 0 || (revenue && (profit/revenue) < 0.12) ? 'dusuk' : 'kar');
              const tagText = profit < 0 ? 'ZARAR' : (profit === 0 || (revenue && (profit/revenue) < 0.12) ? 'D√ú≈û√úK' : 'K√ÇR');
            %>
            <div class="trip-row">
              <!-- Trip Header -->
              <div class="trip-header">
                <div>
                  <span class="trip-pos">Pozisyon: <%= trip.position_no %></span>
                  <div class="trip-pos-details">
                    <span>IHR: <strong><%= trip.ihr_poz || (trip.loads && trip.loads[0] && trip.loads[0].ihr_poz) || '-' %></strong></span>
                    <span>Dorse: <strong><%= trip.trailer_plate || (trip.loads && trip.loads[0] && trip.loads[0].trailer_plate) || '-' %></strong></span>
                    <span>S√ºr√ºc√º: <strong><%= trip.driver_name || '-' %></strong></span>
                  </div>
                </div>
                <div class="trip-actions">
                  <a class="btn-sm btn-outline-sm" href="/loads/position/<%= encodeURIComponent(trip.position_no) %>/ameta" target="_blank">AMETA PDF</a>
                  <a class="btn-sm btn-primary" href="/loads/position/<%= encodeURIComponent(trip.position_no) %>">Pozisyonu A√ß</a>
                </div>
              </div>
              
              <!-- Trip Content -->
              <div class="trip-content">
                <!-- Left: Info -->
                <div class="detail-box">
                  <div class="detail-box-title">Y√ºk Bilgileri</div>
                  <div class="detail-row">
                    <span class="detail-label">Y√ºkleme √úlkesi</span>
                    <span class="detail-value"><%= trip.loading_city || (trip.loads && trip.loads[0] && trip.loads[0].loading_city) || '-' %></span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">Aƒüƒ±rlƒ±k</span>
                    <span class="detail-value"><%= Number(trip.gross_weight || trip.total_weight_kg || 0).toLocaleString('tr-TR') %> kg</span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">Koli / Paket</span>
                    <span class="detail-value"><%= trip.packages || trip.total_packages || 0 %></span>
                  </div>
                  <% if (uids.length) { %>
                  <div class="detail-row">
                    <span class="detail-label">Y√ºk UID</span>
                    <span class="detail-value blue"><%= uids.join(', ') %></span>
                  </div>
                  <% } %>
                  <% if (faturaKimes.length) { %>
                  <div class="detail-row">
                    <span class="detail-label">Fatura Kesilen</span>
                    <span class="detail-value"><%= faturaKimes.join(', ') %></span>
                  </div>
                  <% } %>
                  <% if (faturaNolar.length) { %>
                  <div class="detail-row">
                    <span class="detail-label">Fatura No</span>
                    <span class="detail-value"><%= faturaNolar.join(', ') %></span>
                  </div>
                  <% } %>
                </div>
                
                <!-- Middle: Accounting -->
                <div class="detail-box">
                  <div class="detail-box-title">Muhasebe</div>
                  <div style="display:flex; flex-direction:column; align-items:center; gap:8px; padding:8px 0;">
                    <div style="display:flex; align-items:center; gap:20px;">
                      <div style="display:flex; align-items:center; gap:6px;">
                        <span class="accounting-dot blue"></span>
                        <span style="color:#9ca3af; font-size:12px;">Y√ºkleme</span>
                        <span style="color:#60a5fa; font-weight:700; font-size:16px;"><%= loading %></span>
                      </div>
                      <div style="display:flex; align-items:center; gap:6px;">
                        <span class="accounting-dot green"></span>
                        <span style="color:#9ca3af; font-size:12px;">Bo≈üaltma</span>
                        <span style="color:#34d399; font-weight:700; font-size:16px;"><%= unloading %></span>
                      </div>
                    </div>
                    <div style="color:#9ca3af; font-size:12px;">Y√ºkleme & Bo≈üaltma <strong style="color:#34d399;"><%= accountingCost %> ‚Ç¨</strong></div>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">Toplam KM</span>
                    <span class="detail-value"><%= totalKm %> km</span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">KM Deƒüeri</span>
                    <span class="detail-value green">~<%= kmEuro %> ‚Ç¨</span>
                  </div>
                  <% if (ordinos.length) { %>
                  <div class="detail-row">
                    <span class="detail-label">Ordino</span>
                    <span class="detail-value amber"><%= ordinos.map(o => o.cost + '‚Ç¨').join(', ') %></span>
                  </div>
                  <% } %>
                </div>
                
                <!-- Right: Profit -->
                <div class="detail-box">
                  <div class="detail-box-title">Kar / Zarar</div>
                  <% if (trip.tripProfit) { %>
                  <div class="detail-row">
                    <span class="detail-label">Gelir (EUR)</span>
                    <span class="detail-value blue"><%= Number(revenue).toLocaleString('en-US') %> ‚Ç¨</span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">Maliyet (EUR)</span>
                    <span class="detail-value red"><%= Number(costs).toLocaleString('en-US') %> ‚Ç¨</span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">PROFIT</span>
                    <span class="detail-value <%= profit >= 0 ? 'green' : 'red' %>"><%= Number(profit).toLocaleString('en-US') %> ‚Ç¨</span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">Marj</span>
                    <span class="detail-value"><%= trip.tripProfit.marginPercent === null ? '-' : trip.tripProfit.marginPercent + '%' %></span>
                  </div>
                  <div class="detail-row">
                    <span class="detail-label">Durum</span>
                    <span class="profit-tag <%= tagClass %>"><%= tagText %></span>
                  </div>
                  <% } else { %>
                  <div style="color:#6b7280; font-size:12px; text-align:center; padding:20px 0;">Kar verisi yok</div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="empty-notes">Hen√ºz kayƒ±tlƒ± sefer yok.</div>
        <% } %>
      </div>

      <!-- Pagination -->
      <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
        <div class="pagination">
          <% const currentPage = page || 1; %>
          <% const currentYear = typeof year !== 'undefined' ? year : new Date().getFullYear(); %>
          <% if (currentPage > 1) { %>
            <a href="/vehicles/<%= truck.id %>?page=<%= currentPage - 1 %>&year=<%= currentYear %>">‚Üê √ñnceki</a>
          <% } %>
          <% const maxLinks = 5; const start = Math.max(1, currentPage - Math.floor(maxLinks/2)); const end = Math.min(totalPages, start + maxLinks - 1); %>
          <% for (let p = start; p <= end; p++) { %>
            <% if (p === currentPage) { %>
              <span class="current"><%= p %></span>
            <% } else { %>
              <a href="/vehicles/<%= truck.id %>?page=<%= p %>&year=<%= currentYear %>"><%= p %></a>
            <% } %>
          <% } %>
          <% if (end < totalPages) { %>
            <span class="dots">...</span>
            <a href="/vehicles/<%= truck.id %>?page=<%= totalPages %>&year=<%= currentYear %>"><%= totalPages %></a>
          <% } %>
          <% if (currentPage < totalPages) { %>
            <a href="/vehicles/<%= truck.id %>?page=<%= currentPage + 1 %>&year=<%= currentYear %>">Sonraki ‚Üí</a>
          <% } %>
        </div>
      <% } %>
    </div>

    <!-- Notes Section -->
    <div class="notes-section">
      <div class="notes-header">
        <h3 class="section-title" style="margin:0">üìù Ek Bilgiler</h3>
        <div class="notes-actions">
          <button id="add-note-toggle" class="btn-note">+ Ekle</button>
          <button id="edit-notes-toggle" class="btn-note">D√ºzenle</button>
        </div>
      </div>

      <form id="add-note-form" class="note-form" action="/vehicles/<%= truck.id %>/notes" method="POST">
        <textarea name="note" rows="3" placeholder="Yeni bilgi veya not girin..."></textarea>
        <div class="note-form-actions">
          <button type="button" id="add-note-cancel" class="btn-note">ƒ∞ptal</button>
          <button type="submit" class="btn-sm btn-primary">Kaydet</button>
        </div>
      </form>

      <div id="notes-list">
        <% if (notes && notes.length) { %>
          <% notes.forEach(n => { %>
            <div class="note-item">
              <div class="note-header">
                <span class="note-author"><%= n.created_by || 'Anonim' %></span>
                <span class="note-date"><%= new Date(n.created_at).toLocaleDateString('tr-TR') %></span>
              </div>
              <div class="note-body"><%= n.note %></div>
              <div class="edit-controls">
                <button data-note-id="<%= n.id %>" class="btn-note edit-btn">D√ºzenle</button>
                <button data-note-id="<%= n.id %>" class="btn-note delete-btn" style="color:#f87171">Sil</button>
                <form id="delete-form-<%= n.id %>" action="/vehicles/<%= truck.id %>/notes/<%= n.id %>?_method=DELETE" method="POST" style="display:none"></form>
              </div>
              <form id="edit-form-<%= n.id %>" class="note-form" action="/vehicles/<%= truck.id %>/notes/<%= n.id %>?_method=PUT" method="POST" style="margin-top:8px">
                <textarea name="note" rows="3"><%= n.note %></textarea>
                <div class="note-form-actions">
                  <button type="button" data-form-id="edit-form-<%= n.id %>" class="btn-note cancel-edit">ƒ∞ptal</button>
                  <button type="submit" class="btn-sm btn-primary">Kaydet</button>
                </div>
              </form>
            </div>
          <% }) %>
        <% } else { %>
          <div class="empty-notes">Hen√ºz ek bilgi yok.</div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Delete Modal -->
<div id="delete-confirm-modal" class="modal-overlay">
  <div class="modal-box">
    <div class="modal-title">üóëÔ∏è Notu Sil</div>
    <div class="modal-text" id="delete-confirm-text">Bu notu silmek istediƒüinize emin misiniz?</div>
    <div class="modal-actions">
      <button id="delete-cancel-btn" class="btn-cancel">ƒ∞ptal</button>
      <button id="delete-confirm-btn" class="btn-delete">Sil</button>
    </div>
  </div>
</div>

<script>
(function(){
  const toggle = document.getElementById('add-note-toggle');
  const form = document.getElementById('add-note-form');
  const cancel = document.getElementById('add-note-cancel');
  const textarea = form?.querySelector('textarea');

  toggle?.addEventListener('click', () => {
    form.style.display = form.style.display === 'block' ? 'none' : 'block';
    textarea?.focus();
  });
  cancel?.addEventListener('click', () => form.style.display = 'none');

  // Edit mode
  const editToggle = document.getElementById('edit-notes-toggle');
  const editControls = document.querySelectorAll('.edit-controls');
  let editMode = false;

  editToggle?.addEventListener('click', () => {
    editMode = !editMode;
    editControls.forEach(el => el.style.display = editMode ? 'flex' : 'none');
    editToggle.textContent = editMode ? 'Bitir' : 'D√ºzenle';
  });

  // Edit/Delete handlers
  let pendingDeleteId = null;
  const modal = document.getElementById('delete-confirm-modal');

  document.addEventListener('click', e => {
    if (e.target.classList.contains('edit-btn')) {
      e.preventDefault();
      const id = e.target.dataset.noteId;
      const editForm = document.getElementById('edit-form-' + id);
      if (editForm) {
        editForm.style.display = 'block';
        editForm.querySelector('textarea')?.focus();
      }
    }
    if (e.target.classList.contains('cancel-edit')) {
      e.preventDefault();
      const formId = e.target.dataset.formId;
      const f = document.getElementById(formId);
      if (f) f.style.display = 'none';
    }
    if (e.target.classList.contains('delete-btn')) {
      e.preventDefault();
      pendingDeleteId = e.target.dataset.noteId;
      modal.style.display = 'flex';
    }
  });

  document.getElementById('delete-confirm-btn')?.addEventListener('click', () => {
    if (pendingDeleteId) {
      document.getElementById('delete-form-' + pendingDeleteId)?.submit();
    }
  });

  document.getElementById('delete-cancel-btn')?.addEventListener('click', () => {
    modal.style.display = 'none';
    pendingDeleteId = null;
  });
})();
</script>
